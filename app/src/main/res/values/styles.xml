<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="textMain">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/green_theme_dark</item>
    </style>

    <style name="textSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/green_theme_dark</item>
    </style>

    <style name="buttonMain">
        <item name="android:background">@drawable/entries_bottom_button</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="buttonMenu">
        <item name="android:background">@drawable/button_menu</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="recyclerList">
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:background">@color/list_light_grey</item>
    </style>

    <style name="error">
        <item name="android:textColor">@color/error</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="progress_wheel_main" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/progress_wheel_inner_daily</item>
        <item name="android:indeterminate">false</item>
        <item name="android:max">100</item>
        <item name="android:progress">65</item>
        <item name="android:progressDrawable">@drawable/progress_wheel_outer_total</item>
    </style>

    <style name="progress_wheel_overlay" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:indeterminate">false</item>
        <item name="android:max">100</item>
        <item name="android:progress">65</item>
        <item name="android:progressDrawable">@drawable/progress_wheel_inner_prog</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
